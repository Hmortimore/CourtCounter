<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@android:color/white">


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:src="@drawable/patslogo"/>

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="sans-serif-light"
                android:textSize="50sp"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="12dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TOUCHDOWN"
                android:textAllCaps="true"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:onClick="addThreePointsForTeamA"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FIELD GOAL"
                android:textAllCaps="true"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:onClick="addTwoPointsForTeamA"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONVERSION: 2"
                android:textAllCaps="true"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:onClick="addOnePointForTeamA"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONVERSION: 1"
                android:textAllCaps="true"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:onClick="addOnePointForTeamA"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TIME OUT"
                android:textAllCaps="true"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:onClick="addOnePointForTeamA"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:src="@drawable/logonfl"/>

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="sans-serif-light"
                android:textSize="50sp"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:layout_marginBottom="12dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TOUCHDOWN"
                android:textAllCaps="true"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:onClick="addThreePointsForTeamB"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FIELD GOAL"
                android:textAllCaps="true"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:onClick="addTwoPointsForTeamB"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONVERSION: 2"
                android:textAllCaps="true"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:onClick="addOnePointForTeamB"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONVERSION: 1"
                android:textAllCaps="true"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:onClick="addOnePointForTeamB"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TIME OUT"
                android:textAllCaps="true"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:onClick="addOnePointForTeamB"/>

        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Reset"
        android:textAllCaps="true"
        android:layout_margin="8dp"
        android:onClick="resetScore"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"/>

</RelativeLayout>